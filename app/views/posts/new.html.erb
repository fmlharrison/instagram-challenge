<h1>Upload a new photo</h1>

<div class="form-wrapper" >
  <%= simple_form_for @post, html: {class: 'form-horizontal', multipart: true} do |form| %>
    <div class="form-group">
      <%= form.input :image, as: :file %>
    </div>
    <div class="form-group text-center">
      <%= form.input :caption, placeholder: "Add image caption here" %>
    </div>
    <div class="form-group text-center">
      <%= form.button :submit, class: "btn-sucess", value: "Add Picture" %>
    </div>
  <% end %>
</div>
